@model HH.bll.DTOs.ClientDTO.CreateClientDTO
@using HH.web
@using HH.bll.DTOs.LanguageDTO
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@inject IHtmlLocalizer<SharedResource> SharedLocalizer

@{
    ViewData["Title"] = SharedLocalizer["Create Client"];


}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                @SharedLocalizer["Create Client"]
            </h1>
        </div>
    </div>
    <div class="row" >
        <div class="col-lg-12" >
                <form asp-action="Create" id="form" enctype="multipart/form-data">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-row">
                            <div class="col-lg-6"> 
                            <div class="form-group">
                                <label>@SharedLocalizer["Logo"]</label>
                                <input type="file" class="form-control" name="FormLogo" />
                            </div>
                             <div class="form-group">
                                <label>@SharedLocalizer["Name"]</label>
                                <input type="text" class="form-control" name="Name" />
                            </div>                       
                            <div class="form-group">
                                <label>@SharedLocalizer["Link"]</label>
                                <input type="text" class="form-control" name="Link" />
                            </div>                       
                    </div>
                </div>
                 <div class="dx-fieldset">
                    <br />
                    <div id="summary"></div>
                    <br />
                    <div id="button"></div>
                </div>
            </form>
          </div>
      </div>
</div>
@section Scripts {
    <script>
     $(function () {
          $("#button").dxButton({
                text: '@SharedLocalizer["Add"]',
                type: "success",
                useSubmitBehavior: true,
            });
            $("#summary").dxValidationSummary({});
        });
        </script>
}
