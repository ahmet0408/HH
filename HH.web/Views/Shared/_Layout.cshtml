@using HH.web
@using System.Globalization;
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@inject IHtmlLocalizer<SharedResource> SharedLocalizer

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HH</title>
    <link rel="stylesheet" href="~/css/site.css" />

    <link href="~/devextreme/css/dx.common.css" rel="stylesheet" />
    <link href="~/devextreme/css/dx.light.css" rel="stylesheet" />

    <!-- jQuery -->
    @*<script src="~/admin/js/jquery.js"></script>*@
    @*  <script src="~/js/quill.min.js"></script>*@
    <script src="~/devextreme/js/jquery.min.js"></script>
    <script src="~/devextreme/js/dx-quill.min.js"></script>
 
    <!-- Styles -->
    <link href="~/assets/css/lib/font-awesome.min.css" rel="stylesheet">
    <link href="~/assets/css/lib/themify-icons.css" rel="stylesheet">
    <link href="~/assets/css/lib/owl.theme.default.min.css" rel="stylesheet" />
    <link href="~/assets/css/lib/menubar/sidebar.css" rel="stylesheet">
    <link href="~/assets/css/lib/bootstrap.min.css" rel="stylesheet">
    <link href="~/assets/css/lib/helper.css" rel="stylesheet">
    <link href="~/assets/css/style.css" rel="stylesheet">
</head>
<body class="dx-viewport">
    <div class="sidebar    ">
        @*sidebar-hide-to-hide sidebar-shrink sidebar-gestures*@
            <div class="nano">
                <div class="nano-content">
                    <div class="logo"><a asp-action="Index" asp-controller="Admin">
                                <span>Halkara@Hyzmat</span></a></div>
                    <ul>
                        <li><a class="sidebar-sub-toggle">About Us<span
                                class="sidebar-collapse-icon ti-angle-down"></span></a>
                            <ul>
                                <li><a asp-action="Index" asp-controller="AboutUs" >About Us</a></li>
                                <li><a asp-action="Create" asp-controller="AboutUs" >Create</a></li>
                            </ul>
                        </li>
                        <li><a class="sidebar-sub-toggle">Banner<span
                                class="sidebar-collapse-icon ti-angle-down"></span></a>
                            <ul>
                                <li><a asp-action="Index" asp-controller="Banner" >Banner</a></li>
                                <li><a asp-action="Create" asp-controller="Banner" >Create</a></li>
                            </ul>
                        </li>
                          <li><a class="sidebar-sub-toggle">Client<span
                                class="sidebar-collapse-icon ti-angle-down"></span></a>
                            <ul>
                                <li><a asp-action="Index" asp-controller="Client" >Client</a></li>               
                                <li><a asp-action="Create" asp-controller="Client" >Create</a></li>
                            </ul>
                        </li>
                        <li><a class="sidebar-sub-toggle">Company<span
                                class="sidebar-collapse-icon ti-angle-down"></span></a>
                            <ul>
                                <li><a asp-action="Index" asp-controller="Company" >News</a></li>               
                                <li><a asp-action="Create" asp-controller="Company" >Create</a></li>
                            </ul>
                        </li>
                        <li><a class="sidebar-sub-toggle">Contact<span
                                class="sidebar-collapse-icon ti-angle-down"></span></a>
                            <ul>
                                <li><a asp-action="Index" asp-controller="Contact">Contact</a></li>                                  
                            </ul>
                        </li>
                        <li><a class="sidebar-sub-toggle">Mission<span
                                class="sidebar-collapse-icon ti-angle-down"></span></a>
                            <ul>
                                <li><a asp-action="Index" asp-controller="Mission" >Mission</a></li>               
                                <li><a asp-action="Create" asp-controller="Mission" >Create</a></li>
                            </ul>
                        </li>
                        <li><a class="sidebar-sub-toggle">Product<span
                                class="sidebar-collapse-icon ti-angle-down"></span></a>
                            <ul>
                                <li><a asp-action="Index" asp-controller="Product" >Product</a></li>               
                                <li><a asp-action="Create" asp-controller="Product" >Create</a></li>
                                <li><a asp-action="CreateOption" asp-controller="Product" >Create Option</a></li>
                                <li><a asp-action="CreateOptionContent" asp-controller="Product" >Create Option Content</a></li>
                            </ul>
                        </li>
                        <li><a class="sidebar-sub-toggle">Project<span
                                class="sidebar-collapse-icon ti-angle-down"></span></a>
                            <ul>
                                <li><a asp-action="Index" asp-controller="Project" >Project</a></li>                
                                <li><a asp-action="Create" asp-controller="Project" >Create</a></li>
                                <li><a asp-action="CreateLocation" asp-controller="Project" >Create Location</a></li>
                                <li><a asp-action="CreateStatus" asp-controller="Project" >Create Status</a></li>
                                <li><a asp-action="Location" asp-controller="Project" >Location</a></li>
                                <li><a asp-action="Status" asp-controller="Project" >Status</a></li>
                            </ul>
                        </li>
                        <li><a class="sidebar-sub-toggle">Service<span
                                class="sidebar-collapse-icon ti-angle-down"></span></a>
                            <ul>
                                <li><a asp-action="Index" asp-controller="Service" >Service</a></li>                
                                <li><a asp-action="Create" asp-controller="Service" >Create</a></li>
                            </ul>
                        </li>
                    </ul>
            </div>
        </div>
    </div>
    <div class="header">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <div class="float-left">
                        <div class="hamburger sidebar-toggle">
                            <span class="line"></span>
                            <span class="line"></span>
                            <span class="line"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div  style="margin-left: 250px">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- DevExtreme library -->
    <script src="~/devextreme/js/dx.all.js"></script>
    <script src="~/devextreme/js/localization/dx.messages.ru.js"></script>
    <script src="~/devextreme/js/dx.aspnet.data.js"></script>
    
    <!-- jquery vendor -->
    @*<script src="~/assets/js/lib/jquery.min.js"></script>*@
    <script src="~/assets/js/lib/jquery.nanoscroller.min.js"></script>
    <!-- nano scroller -->
    <script src="~/assets/js/lib/menubar/sidebar.js"></script>
    <script src="~/assets/js/lib/preloader/pace.min.js"></script>
    <!-- sidebar -->
    <script src="~/assets/js/lib/bootstrap.min.js"></script>
    <script src="~/assets/js/scripts.js"></script>
    <!-- bootstrap -->
    @RenderSection("Scripts", required: false)
</body>
</html>
