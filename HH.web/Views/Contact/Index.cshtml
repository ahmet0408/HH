@using HH.web.Utilities;
@using HH.web
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@inject IHtmlLocalizer<SharedResource> SharedLocalizer

@{
    ViewData["Title"] = SharedLocalizer["Users"];

}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                @SharedLocalizer["Users"] 
            </h1>
        </div>
    </div>

    <div class="row">
        <div id="gridContainer">
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(function () {
            let url = `@API.GetAllUser`;
            var returnUrl = '@Context.Request.Path@Context.Request.QueryString';
            $("#gridContainer").dxDataGrid({
                dataSource: DevExpress.data.AspNet.createStore({
                    key: "id",
                    loadUrl: url,
                    insertUrl: url,
                    updateUrl: url,
                    deleteUrl: url,
                    onBeforeSend: function (method, ajaxOptions) {
                        ajaxOptions.xhrFields = { withCredentials: true };
                    }
                }),
                filterPanel: {
                    visible: false
                },
                filterRow: { visible: false },
                remoteOperations: true,
                scrolling: {
                    mode: "virtual",
                    rowRenderingMode: "virtual"
                },
                paging: {
                    pageSize: 100
                },
                editing: {
                    useIcons: true,
                    allowDeleting: true,
                },
                headerFilter: {
                    visible: true
                },
                wordWrapEnabled: true,
                showColumnLines: true,
                showRowLines: true,
                rowAlternationEnabled: true,
                showBorders: true,
                searchPanel: {
                    visible: true
                },
                stateStoring: {
                    enabled: true,
                    type: "localStorage",
                    storageKey: "ContactAdmin"
                },
                columns: [
                    {
                        caption: '@SharedLocalizer["Test"]',
                        dataField: "test",
                        allowHeaderFiltering: false
                    }, 
                    {
                        caption: '@SharedLocalizer["NatureOfBusiness"]',
                        dataField: "natureOfBusiness",
                        allowHeaderFiltering: false
                    },
                    {
                        caption: '@SharedLocalizer["Adress"]',
                        dataField: "adress",
                        allowHeaderFiltering: false
                    },
                    {
                        caption: '@SharedLocalizer["PostCode"]',
                        dataField: "postCode",
                        allowHeaderFiltering: false
                    },
                     {
                        caption: '@SharedLocalizer["ContactName"]',
                        dataField: "contactName",
                        allowHeaderFiltering: false
                    },
                    {
                        caption: '@SharedLocalizer["ContactPhone"]',
                        dataField: "contactPhone",
                        allowHeaderFiltering: false
                    },
                    {
                        caption: '@SharedLocalizer["Email Adress"]',
                        dataField: "emailAdress",
                        allowHeaderFiltering: false
                    },
                    {
                        caption: '@SharedLocalizer["Idea"]',
                        dataField: "idea",
                        allowHeaderFiltering: false
                    },
                    {
                        caption: '@SharedLocalizer["File"]',
                        dataField: "file",
                        allowHeaderFiltering: false
                    },
                    {
                        type: "buttons",
                        width: 110,
                        buttons: [
                            "delete"
                        ]
                    }
                ]
            });

        });
    </script>
}