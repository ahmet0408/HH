@model HH.bll.DTOs.AboutUsDTO.CreateAboutUsDTO
@using HH.web
@using HH.bll.DTOs.LanguageDTO
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@inject IHtmlLocalizer<SharedResource> SharedLocalizer

@{
    ViewData["Title"] = SharedLocalizer["Create About Us"];

    int lngIndex = 0;

}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                @SharedLocalizer["Create About Us"]
            </h1>
        </div>
    </div>
    <div class="row">
        <div id="gridContainer">
            <form asp-action="Create" id="form" enctype="multipart/form-data">
                <div class="col-md-12">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-row">
                        <div class="col-md-6">
                            @foreach (LanguageDTO languageDTO in ViewBag.Languages)
                            {
                                <h2>@languageDTO.Name</h2>
                                <hr />
                                <input type="hidden" class="form-control" name="AboutUsTranslates[@lngIndex].LanguageCulture" value="@languageDTO.Culture" />                         
                                <div class="form-group">
                                    <label>@SharedLocalizer["Name"]</label>
                                    <input type="text" class="form-control" name="AboutUsTranslates[@lngIndex].Name" />
                                </div>
                                <br />
                                lngIndex++;
                            }

                        </div>
                        <div class="col-md-6">
                            <h2>@SharedLocalizer["Data"]</h2>
                            <hr />


                            <div class="form-group">
                                <label>@SharedLocalizer["Link"]</label>
                                <input type="text" class="form-control" name="Link" />
                            </div>


                            <div class="form-group">
                                <label>@SharedLocalizer["Order"]</label>
                                <div id="sortNumber"></div>
                            </div>
                             <div class="form-group">
                                <div id="published"></div>
                            </div>
                            
                        </div>
                    </div>
 
                </div>

                <div class="dx-fieldset">
                    <br />
                    <div id="summary"></div>
                    <br />
                    <div id="button"></div>
                </div>
            </form>
        </div>
    </div>
</div>
